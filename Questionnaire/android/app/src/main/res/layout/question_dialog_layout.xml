<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/air21_theme"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/close_dialog"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/back_btn"
            android:clickable="true" />

        <TextView
            android:id="@+id/remarks_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="FULL REJECTION"
            android:textColor="@color/welcome_text_color"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="TITLE:"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/title_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_selector"
            android:fontFamily="sans-serif-condensed"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/White"
            android:textCursorDrawable="@null"
            android:textSize="18sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="DESCRIPTION:"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/description_field"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/text_selector"
            android:fontFamily="sans-serif-condensed"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="@color/White"
            android:textCursorDrawable="@null"
            android:textSize="18sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_button"
            android:layout_marginLeft="@dimen/padding_button"
            android:layout_marginRight="@dimen/padding_button"
            android:background="@drawable/login_button_selector"
            android:fontFamily="sans-serif-condensed"
            android:text="CLEAR"
            android:textAllCaps="true"
            android:textColor="@color/air21_theme"
            android:textSize="20dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_button"
            android:layout_marginLeft="@dimen/padding_button"
            android:layout_marginRight="@dimen/padding_button"
            android:background="@drawable/submit_button_selector"
            android:fontFamily="sans-serif-condensed"
            android:text="SUBMIT"
            android:textAllCaps="true"
            android:textColor="@color/White"
            android:textSize="20dp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>